
## First tell make what our target is going to be
target = example-01
CXX = g++

## Tell make where to find the vecds configuration file
INCLUDES = $/@VECDS_INCLUDES@

## Specify what file to blow away on, "make clean"
clean-up-files = output/*

## Then define some actual make rules
all: $(target)

clean:
	rm -rf *~ $(target) $(clean-up-files)

$(target): 
	@echo Building $@
	@$(CXX) -Wall -o $@ example-01.cxx -I$(INCLUDES) -lgsl -lgslcblas -lm
	@echo Built $@

## Tell make that the rule "make clean" is not expected to produce
## files of the same name as Makefile rules usually do.
.PHONY: all run clean

